{
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parcer": "@typescript-eslint/parser",
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "extends": [
        "eslint:recommended",
        "@nuxtjs/eslint-config-typescript",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "vue/multi-word-component-names": "off",
        "vue/no-unused-components": [
            "warn"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "tabWidth": 2,
                "printWidth": 100,
                "semicolons": true,
                "semi": true,
                "endOfLine": "auto",
                "bracketSpacing": true,
                "indent": "off"
            }
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}